<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/add_movie_button" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintVertical_bias="0.0">

        <LinearLayout
                android:id="@+id/movie_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/text_Box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Title Here"
                    android:text=""/>

        </LinearLayout>

    </ScrollView>

    <Button
            android:id="@+id/add_movie_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Movie Title"
            android:backgroundTint="@android:color/holo_green_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="4dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:id="@+id/delete_movie_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Movie Title"
            android:backgroundTint="@android:color/holo_red_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintHorizontal_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>
